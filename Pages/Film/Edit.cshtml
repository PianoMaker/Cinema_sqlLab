@page
@model Cinema4.Pages.Film.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Film</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Film.Id" />
            <div class="form-group">
                <label asp-for="Film.Name" class="control-label"></label>
                <input asp-for="Film.Name" class="form-control" />
                <span asp-validation-for="Film.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Film.DirectorID" class="control-label"></label>
                <select asp-for="Film.DirectorID" class="form-control" asp-items="ViewBag.DirectorID"></select>
                <span asp-validation-for="Film.DirectorID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Film.GenreID" class="control-label"></label>
                <select asp-for="Film.GenreID" class="form-control" asp-items="ViewBag.GenreID"></select>
                <span asp-validation-for="Film.GenreID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Film.StudioID" class="control-label"></label>
                <select asp-for="Film.StudioID" class="form-control" asp-items="ViewBag.StudioID"></select>
                <span asp-validation-for="Film.StudioID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Film.Year" class="control-label"></label>
                <input asp-for="Film.Year" class="form-control" />
                <span asp-validation-for="Film.Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
