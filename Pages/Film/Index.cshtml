@page
@model Cinema4.Pages.Film.IndexModel

@{
    ViewData["Title"] = "Фільми";
}

<h1>Фільми</h1>

<button type="button" onclick="location.href='@Url.Page("Create")'" class="btn-secondary">
    Створити
</button>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Films[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Films[0].Director)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Films[0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Films[0].Studio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Films[0].Year)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Films) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Director.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Studio.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                    <button type="button" class="smallbutton"
                            onclick="location.href='@Url.Page("./Edit", new { id = item.Id })'">
                        Edit
                    </button>

                    <button type="button" class="smallbutton btndetails"
                            onclick="location.href='@Url.Page("./Details", new { id = item.Id })'">
                        Details
                    </button>

                    <button type="button" class="smallbutton btndelete"
                            onclick="location.href='@Url.Page("./Delete", new { id = item.Id })'">
                        Delete
                    </button>

            </td>
        </tr>
}
    </tbody>
</table>
