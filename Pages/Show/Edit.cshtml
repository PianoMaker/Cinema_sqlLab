@page
@model Cinema4.Pages.Show.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Show</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Show.Id" />
            <div class="form-group">
                <label asp-for="Show.DateTime" class="control-label"></label>
                <input asp-for="Show.DateTime" class="form-control" />
                <span asp-validation-for="Show.DateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Show.FilmID" class="control-label"></label>
                <select asp-for="Show.FilmID" class="form-control" asp-items="ViewBag.FilmID"></select>
                <span asp-validation-for="Show.FilmID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Show.CinemaID" class="control-label"></label>
                <select asp-for="Show.CinemaID" class="form-control" asp-items="ViewBag.CinemaID"></select>
                <span asp-validation-for="Show.CinemaID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Show.SeatsLeft" class="control-label"></label>
                <input asp-for="Show.SeatsLeft" class="form-control" />
                <span asp-validation-for="Show.SeatsLeft" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
